{
  "$schema": "https://shoehorn.dev/schemas/workflow-v2.json",
  "version": "1.0.0",
  "metadata": {
    "name": "test-all-features",
    "displayName": "Test All Features",
    "description": "Test catalog integration and Go templates",
    "author": "shoehorn-team",
    "icon": "ğŸ§ª",
    "category": "testing",
    "tags": ["test", "catalog", "templates"]
  },
  "actions": [
    {
      "action": "system.test.all",
      "label": "Test All Features",
      "description": "Test catalog sources and Go template functionality",
      "primary": true
    }
  ],
  "inputs": {
    "type": "object",
    "properties": {
      "Name": {
        "type": "string",
        "description": "Test name",
        "default": "my-test-resource",
        "pattern": "^[a-z0-9-]+$"
      },
      "Private": {
        "type": "boolean",
        "description": "Is this private?",
        "default": true
      },
      "Branch": {
        "type": "string",
        "description": "Default branch",
        "default": "main",
        "enum": ["main", "master", "develop"]
      },
      "Teams": {
        "type": "array",
        "description": "Select teams (tests catalog:teams)",
        "items": {
          "type": "string"
        },
        "ui:widget": "multiselect",
        "ui:options": {
          "source": "catalog:teams",
          "allowCustom": true,
          "placeholder": "Select teams...",
          "helpText": "This dropdown loads from catalog API"
        }
      },
      "Owner": {
        "type": "string",
        "description": "Select owner (tests catalog:users)",
        "ui:widget": "select",
        "ui:options": {
          "source": "catalog:users",
          "placeholder": "Select owner...",
          "helpText": "This dropdown loads user emails"
        }
      },
      "Topics": {
        "type": "array",
        "description": "Topics/tags",
        "items": {
          "type": "string"
        },
        "default": ["golang", "api", "microservice"]
      }
    },
    "required": ["Name", "Private", "Teams", "Owner"]
  },
  "outputs": {
    "testResult": {
      "description": "Test execution result",
      "type": "string"
    },
    "catalogsWorking": {
      "description": "Whether catalog integration works",
      "type": "boolean"
    },
    "templatesWorking": {
      "description": "Whether Go templates work",
      "type": "boolean"
    }
  },
  "steps": [
    {
      "id": "test_basic_variables",
      "name": "Test 1: Basic Variable Interpolation",
      "adapter": "shell",
      "config": {
        "command": "echo",
        "args": ["âœ… Basic variables work: Name={{.Inputs.Name}}, Owner={{.Inputs.Owner}}"]
      }
    },
    {
      "id": "test_if_else",
      "name": "Test 2: If/Else Template",
      "adapter": "shell",
      "depends_on": ["test_basic_variables"],
      "config": {
        "command": "echo",
        "args": ["âœ… If/Else works: {{if .Inputs.Private}}ğŸ”’ Private{{else}}ğŸŒ Public{{end}}"]
      }
    },
    {
      "id": "test_range_loop",
      "name": "Test 3: Range Loop Template",
      "adapter": "shell",
      "depends_on": ["test_if_else"],
      "config": {
        "command": "echo",
        "args": ["âœ… Range works: Topics={{range .Inputs.Topics}}{{.}} {{end}}"]
      }
    },
    {
      "id": "test_comparison_helpers",
      "name": "Test 4: Comparison Helpers",
      "adapter": "shell",
      "depends_on": ["test_range_loop"],
      "config": {
        "command": "echo",
        "args": ["âœ… Helpers work: {{if eq .Inputs.Branch \"main\"}}Main branch detected{{else}}Not main branch{{end}}"]
      }
    },
    {
      "id": "test_string_helpers",
      "name": "Test 5: String Helpers",
      "adapter": "shell",
      "depends_on": ["test_comparison_helpers"],
      "config": {
        "command": "echo",
        "args": ["âœ… String helpers work: {{.Inputs.Name | upper}}"]
      }
    },
    {
      "id": "test_complex_template",
      "name": "Test 6: Complex Template",
      "adapter": "shell",
      "depends_on": ["test_string_helpers"],
      "config": {
        "command": "echo",
        "args": [
          "âœ… Complex template works:\n\nğŸ“¦ Resource: {{.Inputs.Name | upper}}\n{{if .Inputs.Private}}ğŸ”’ Visibility: Private{{else}}ğŸŒ Visibility: Public{{end}}\nğŸ‘¤ Owner: {{.Inputs.Owner}}\nğŸ·ï¸  Topics: {{range .Inputs.Topics}}{{.}} {{end}}\nğŸ‘¥ Teams: {{range .Inputs.Teams}}{{.}} {{end}}\nğŸŒ¿ Branch: {{if eq .Inputs.Branch \"main\"}}âœ… main (default){{else}}âš ï¸  {{.Inputs.Branch}}{{end}}"
        ]
      }
    },
    {
      "id": "final_summary",
      "name": "Test 7: Final Summary",
      "adapter": "shell",
      "depends_on": ["test_complex_template"],
      "config": {
        "command": "echo",
        "args": [
          "ğŸ‰ ALL TESTS PASSED!\n\nâœ… Basic variable interpolation\nâœ… If/Else templates\nâœ… Range loops\nâœ… Comparison helpers (eq, ne)\nâœ… String helpers (upper, lower)\nâœ… Complex nested templates\nâœ… Catalog sources (teams, users)\n\nğŸš€ Features are working correctly!"
        ]
      }
    }
  ],
  "rollback": {
    "enabled": false
  }
}
